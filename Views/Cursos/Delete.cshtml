@model SistemaDeControleDeTCCs.Models.Curso

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<h4>Tem certeza que deseja excluir?</h4>
<br />
<div>
    <h4>Curso: @Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sigla)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sigla)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodEmec)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodEmec)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coordenador)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Coordenador == null)
            {
                <span>Não Definido</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Coordenador.Nome)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campus.Endereco)
        </dd>
    </dl>
    <div class="form-row">
        <div class="form-group col-md-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-outline-danger btn-block" />
            </form>
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-outline-secondary btn-block" asp-action="Index"><i class="bi bi-arrow-return-left" aria-hidden="true"></i> Voltar</a>
        </div>
    </div>
</div>
