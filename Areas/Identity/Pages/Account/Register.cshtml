@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar Novo Usuário";
    var tiposUsuarios = (List<SistemaDeControleDeTCCs.Models.TipoUsuario>)ViewData["tiposUsuarios"];
    var cursos = (List<SistemaDeControleDeTCCs.Models.Curso>)ViewData["cursos"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_StatusMessage" for="StatusMessage" />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Input.TipoUsuarioId" class="control-label"></label>
                    <select asp-for="Input.TipoUsuarioId" asp-items='new SelectList(tiposUsuarios,"TipoUsuarioId","DescTipo")' class="form-control">
                        <option value="">Selecione</option>
                    </select>
                    <span asp-validation-for="Input.TipoUsuarioId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Input.IdCurso" class="control-label"></label>
                    <select asp-for="Input.IdCurso" asp-items='new SelectList(cursos,"Id","Nome")' class="form-control">
                        <option value="">Selecione</option>
                    </select>
                    <span asp-validation-for="Input.IdCurso" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Nome"></label>
                    <input asp-for="Input.Nome" class="form-control" />
                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Sobrenome"></label>
                    <input asp-for="Input.Sobrenome" class="form-control" />
                    <span asp-validation-for="Input.Sobrenome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Matricula" class="control-label"></label>
                    <input asp-for="Input.Matricula" class="form-control" />
                    <span asp-validation-for="Input.Matricula" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Cpf" class="control-label"></label>
                    <input asp-for="Input.Cpf" class="form-control" />
                    <span asp-validation-for="Input.Cpf" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="control-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div>
                    <button type="submit" class="btn btn-outline-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Salvar</button>
                </div>
                <div>
                    <a asp-action="Index" asp-area="Coordenador" asp-controller="Usuarios" class="btn btn-outline-secondary"><i class="fa fa-list" aria-hidden="true"></i> Voltar para a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
